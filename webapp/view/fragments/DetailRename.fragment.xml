<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified">
 
    <Dialog 
    	title='Rename "{plants>plant_name}"'
		class="sapUiContentPadding"
    	id="dialogRenamePlant">
 
	    <content>
	    	<VBox>
				<Text
					class="sapUiTinyMarginBottom"
					text="Renaming might take some time as it involves modifying image files."/>
				<Label 
					text="New Plant Name"
					labelFor='inputNewPlantName'/>
				<Input
					id='inputNewPlantName'
					width='15rem'
					autocomplete="false"
					liveChange=".onLiveChangeNewPlantName"
					maxLength="100"
					required="true"
					placeholder="New plant name"/>
			</VBox>
		</content>

		<beginButton>
			<Button
				id="btnRenamePlantSubmit"
				type="Emphasized"
				text="Submit"
				enabled="false"  
				press=".onPressButtonSubmitRenamePlant"/>
		</beginButton>
		
		<endButton>
			<Button
				text="Cancel"
				press=".onPressButtonCancelRenamePlant"/>
		</endButton>				
    </Dialog>
</core:FragmentDefinition>