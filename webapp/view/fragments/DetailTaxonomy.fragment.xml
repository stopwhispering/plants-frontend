<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:m="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	

	<m:VBox  >
		<m:Label text="Name" labelFor="textName"/>
		<m:Text
			id="textName"
			text="{= (${plants>taxon/is_custom}) ? (${plants>taxon/name} + '( Custom Name)' ) : (${plants>taxon/name}) }"/>
	</m:VBox>
	<m:VBox>
		<m:Label text="{i18n>rank}" labelFor="textRank"/>
		<m:Text id="textRank" text="{plants>taxon/rank}"/>
	</m:VBox>	
	<m:VBox >
		<m:Label text="{i18n>fqId}" labelFor="textFqId"/>
		<m:Text id="textFqId" text="{plants>taxon/fq_id}"/>
	</m:VBox>	

	<m:VBox>
		<m:Label text="{i18n>divisio}" labelFor="textPhylum"/>
		<m:Text id="textPhylum" text="{plants>taxon/phylum}"/>
	</m:VBox>
	<m:VBox>
		<m:Label text="{i18n>familia}" labelFor="textFamily"/>
		<m:Text id="textFamily" text="{plants>taxon/family}"/>
	</m:VBox>	
	<m:VBox>
		<m:Label text="{i18n>genus}" labelFor="textGenus"/>
		<m:Text id="textGenus" text="{plants>taxon/genus}" visible="{= !${plants>taxon/hybridgenus} }"/>
		<MessageStrip
			text="Genus is a hybrid"
			type="Information"
			showIcon="true"
			showCloseButton="false"
			visible="{= ${plants>taxon/hybridgenus} === true }">
		</MessageStrip>							
	</m:VBox>

	<m:VBox >
		<m:Label text="{i18n>species}" labelFor="textSpecies"/>
		<m:Text id="textSpecies" text="{plants>taxon/species}" visible="{= !${plants>taxon/hybrid} }"/>
		<MessageStrip
			text="Species is a hybrid"
			type="Information"
			showIcon="true"
			showCloseButton="false"
			visible="{= ${plants>taxon/hybrid} === true }">
		</MessageStrip>			
	</m:VBox>

	<m:VBox>
		<m:Label text="{i18n>authors}" labelFor="textAuthors" />
		<m:Text id="textAuthors" text="{plants>taxon/authors} ({plants>taxon/name_published_in_year})"/>
	</m:VBox>		
	<m:VBox>
		<m:Label labelFor="textTaxonomicStatus" text="{i18n>taxonomic_status}"/>
		<m:Text id="textTaxonomicStatus" text="{plants>taxon/taxonomic_status}"/>
	</m:VBox>

	<m:VBox>
		<m:Label labelFor="textBasionym" text="Basionym"/>
		<m:Text id="textBasionym" text="{plants>taxon/basionym}"/>
	</m:VBox>		
	<m:VBox>
		<m:Label labelFor="textSynonyms" text="Synonyms"/>
		<m:Text id="textSynonyms" text="{plants>taxon/synonyms_concat}" visible="{= !${plants>taxon/synonym} }"/>
		<MessageStrip
			text="{plants>taxon/synonyms_concat}"
			type="Warning"
			showIcon="true"
			showCloseButton="false"
			visible="{= ${plants>taxon/synonym} === true }">
		</MessageStrip>		
	</m:VBox>	
	<m:VBox>
		<m:Label labelFor="textDistribution" text="Distribution"/>
		<m:Text id="textDistribution" text="{plants>taxon/distribution_concat}"/>
	</m:VBox>
	
</core:FragmentDefinition>