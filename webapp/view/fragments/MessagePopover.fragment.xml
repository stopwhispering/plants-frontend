<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <MessagePopover
        items="{messages>/}"
        initiallyExpanded="true"
        placement="Bottom">
        <items>
	        <MessageItem
	            type="{messages>type}"
	            title="{messages>message}"
	            subtitle="{messages>additionalText}"
	            description="{messages>description}"/>
    	</items>
    	<headerButton>
    		<Button text="Clear (to do)"/>
    	</headerButton>
    </MessagePopover>
</core:FragmentDefinition>