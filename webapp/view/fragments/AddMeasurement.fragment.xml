<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
 
    <Dialog title = "Measurement or Event"
    	id="dialogMeasurement">
 
	    <l:Grid defaultSpan = "L12 M12 S12" 
	    	width = "auto" 
	    	id = "idGrid">
	 
		    <l:content>
		        <f:SimpleForm id="idSimpleForm"
		            minWidth="1024"
		            editable="true"
		            layout="ResponsiveGridLayout"
		            title="Measurement or Event"
		            labelSpanL="3"
		            labelSpanM="3"
		            emptySpanL="4"
		            emptySpanM="4"
		            columnsL="2"
		            columnsM="2">
		        	
		            <f:content>
		            	
		                <Label text="{i18n>plant_name}" />
		                <Input id = "dialogPlantName"
		                	enabled="false"
		                	editable="false"
		                	maxLength="60"
		                	type="Text"
		                	value="{new>/plant_name}"/>
		             
		                <Label text="{i18n>date}" />
		                <Input id = "dialogMeasurementDate"
		                	type="Date"
		                	value="{new>/measurement_date}"/>
		             
		                <Label text="{i18n>repot_rating}" />
		                <Input id = "dialogRepotRating"
		                	maxLength="1"
		                	width="1rem"
		                	type="Number"
		                	value="{new>/repot_rating}"/>
		                	
   		                <Label text="{i18n>pot_width}" />
		                <Input id = "dialogPotWidth"
		                	maxLength="5"
		                	width="5rem"
		                	type="Number"
		                	value="{new>/pot_width_above}"/>
		                
		                <Label text="{i18n>pot_height}" />
		                <Input id = "dialogPotHeight"
		                	maxLength="5"
		                	width="5rem"
		                	type="Number"
		                	value="{new>/pot_height}"/>
		                
		                <Label text="{i18n>pot_circular}" />
		                <CheckBox text="Pot Circular?" 
		                	id="dialogPotCircular"
		                	selected="{new>/pot_circular}"/>
		                	
		                <Label text="{i18n>pot_material}" />
		                <Input id = "dialogPotMaterial"
		                	maxLength="15"
		                	width="12rem"
		                	type="Text"
		                	value="{new>/pot_material}"/>
		                
		                <Label text="{i18n>soil}" />
		                <Input id = "dialogSoil"
		                	type="Text"
		                	value="{new>/soil}"/>
		             
		                <Label text="{i18n>stem_mm}" />
		                <Input id = "dialogStemMaxDiameter"
		                	maxLength="5"
		                	width="5rem"
		                	type="Number"
		                	value="{new>/stem_max_diameter}"/>
		             
		                <Label text="{i18n>stem_mm_outset}" />
		                <Input id = "dialogStemOutsetDiameter"
		                	maxLength="5"
		                	width="5rem"
		                	type="Number"
		                	value="{new>/stem_outset_diameter}"/>
		                
		                <Label text="{i18n>height_mm}" />
		                <Input id = "dialogHeight"
		                	maxLength="5"
		                	width="5rem"
		                	type="Number"
		                	value="{new>/height}"/>

		                <Label text="{i18n>notes}"/>
		                <TextArea rows="3"
		                	id="dialogNotes"
		                	value="{new>/notes}"/>
		
		            </f:content>
		        </f:SimpleForm>
		    </l:content>
	    </l:Grid>
    <buttons>
	    <Button text = "{i18n>cancel}" 
	    	press = "closeDialogAddMeasurement" 
	    	type = "Reject"/>
	    <Button text = "{i18n>add}" 
	    	press = "addMeasurement" 
	    	type = "Accept"/>
    </buttons>
    </Dialog>
</core:FragmentDefinition>