<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified">
 
    <Dialog title = "New Plant"
    	id="dialogNewPlant"
    	contentWidth="1em">
 
	    <content>
	    	<Label
				text="Plant Name"
	  			labelFor="inputCreateNewPlantName"/>
	    	<Input
	    		maxLength="40"
	    		id="inputCreateNewPlantName"/>
	    </content>
	    
	    <beginButton>
		    <Button
	    		text="Save"
            	press="onAddSaveButton"/>
	    </beginButton>
	    
	    <endButton>
		    <Button
	    		text="Cancel"
            	press="onAddCancelButton"/>
	    </endButton>
    </Dialog>
</core:FragmentDefinition>