<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	

	<HBox 
		items="{taxon>images}"
		wrap="Wrap">
		<VBox
			class="sapUiTinyMarginEnd">
		    <Image
		    	densityAware="false" 
		    	src="{taxon>url_small}"
		    	width="120px">
		    	
		    	<detailBox>
					<LightBox>
						<LightBoxItem 
							imageSrc="{taxon>url_original}"
							alt="{taxon>name}"
							title="{taxon>name}"
							subtitle="{taxon>description}">
						</LightBoxItem>
					</LightBox>
				</detailBox>
				
			</Image>
			<Label
				width="120px"
				tooltip="{taxon>description}"
				text="{taxon>description}"
				visible="{= !${status>/details_editable} }"/>
				
			<HBox
				visible="{status>/details_editable}">
				<TextArea
					class="sapUiTinyMarginEnd"
					width="100px"
					rows="2"
					tooltip="{taxon>description}"
					value="{taxon>description}"
					editable="true"/>
				<core:Icon 
					src="sap-icon://delete"
			    	size="1rem"
			    	color="#000000" 
			    	hoverColor="red"
			    	activeColor="red"
			    	tooltip="Unassign Image"
			    	press=".ImageToTaxon.onIconPressUnassignImageFromTaxon">
					<core:layoutData>
						<FlexItemData growFactor="1" />
					</core:layoutData>
				</core:Icon>	
			</HBox>
		</VBox>
	</HBox>	
	
</core:FragmentDefinition>