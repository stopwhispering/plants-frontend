    xmlns:core="sap.ui.core">
 
   <Popover
		id="dialogAssignEventToImage"
		title="Assign to Event"
		class="sapUiContentPadding"
		placement="Vertical"
		contentWidth="16em"
		initialFocus="inputTag">

		<content>
			<!--<HBox>-->
			<!--	<VBox>-->


				<List 
					id="eventsForAssignmentList"
					includeItemInSelection="true"
					items="{ 
						path: 'events>',
						sorter: {
			            	path : 'date',
			            	descending: 'true' }
		            	}">
					
					<CustomListItem
						press="onAssignEventToImage"
						type="Active">
						<VBox>
							<Label 
								text="{path: 'events>date'}"
								wrapping="true"
								/>
							<Label 
								text="{path: 'events>event_notes'}"
								wrapping="true"
								/>
						</VBox>
					</CustomListItem>
					
				</List>


			<!--	</VBox>-->
