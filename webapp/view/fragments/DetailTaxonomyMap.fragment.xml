<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:m="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:map="custom.map">

	<HBox>
		<VBox
			class="sapUiTinyMarginEnd">
		   <map:LeafletMap id="map" width="{= (${device>/system/phone}) ? 320 : 800 }px" height="{= (${device>/system/phone}) ? 300 : 600 }px" defaultZoomLevel="5" autoZoom="true" autoPanToSelectedAreas="true"
							drawOpenStreetMap="true" drawGeoJsonMap="false" geoJsonUrl="./custom/map/level3.geojson" geoJsonHighlights="{taxon>distribution/native}"
							highlightColor="#ff7800" permanentTooltips="true" templateUrl="{localConfig>/leafletMap/templateUrl}"
							attribution="{localConfig>/leafletMap/attribution}">
		   	
		   </map:LeafletMap>
		</VBox>
	</HBox>	
	
</core:FragmentDefinition>