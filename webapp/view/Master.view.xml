<core:View 
	displayBlock="true" 
	controllerName="plants.tagger.ui.controller.Master" 
	height="100%"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	class="sapUiSizeCompact">
	
	<f:DynamicPage id="dynamicPageId"
		toggleHeaderOnTitleClick="false"
		showFooter="true">
		
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title id="pageHeadingTitle"
						   text="Plants ({
								path: 'plants>/PlantsCollection',
								formatter: '.formatter.countPlants'
										 })"/>
				</f:heading>
				<f:actions>
					<Button 
						icon="sap-icon://save"
						tooltip="Save plants &amp; images"
						type="Transparent"
						visible="true"
						press="onPressButtonSave"/>
					<Button 
						icon="sap-icon://undo"
						tooltip="Revert changes and refresh data from backend"
						type="Transparent"
						visible="true"
						press="onPressButtonRefreshData"/>
					<Button 
						icon="sap-icon://add-photo"
						tooltip="Upload images"
						type="Transparent" 
						visible="true"
						press="onOpenFragmentUploadPhotos"/>
					<Button 
						icon="sap-icon://refresh" 
						tooltip="Refresh Images Metadata (EXIF-Tags)"
						type="Transparent" 
						visible="true"
						press="onRefresh"/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<Table id="productsTable"
				   inset="false"
				   items="{
						path: 'plants>/PlantsCollection',
						sorter: {
							path: 'plant_name'
						},
						filters: [{path: 'active', operator: 'EQ', value1: true}]
					}"
				   class="sapFDynamicPageAlignContent"
				   width="auto">
				<headerToolbar>
					<OverflowToolbar>
						<SearchField search="onSearch" width="17.5rem"/>
						<ToolbarSpacer/>
						<OverflowToolbarButton 
							icon="sap-icon://e-care"
							tooltip="New Plant"
							type="Accept"
							class="buttonBorderless"
							press="onAdd"/>
						<!--<OverflowToolbarButton icon="sap-icon://add-photo" type="Transparent" press="onOpenFragmentUploadPhotos"/>-->
						<!--<OverflowToolbarButton icon="sap-icon://sort" type="Transparent" press="onSort"/>-->
						<OverflowToolbarButton
							id="btnToggleHideInactive"
							icon="sap-icon://cancel"
							tooltip="Toggle Hide Inactive"
							type="Emphasized" 
							press="onFilterActive"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="12em">
						<Text text="Product" />
					</Column>
					<Column	hAlign="End">
						<Text text="Status" />
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onListItemPress">
						<cells>
							<ObjectIdentifier title="{plants>plant_name}" text="{plants>species}" />
							<!--<ObjectNumber-->
							<!--		number="{-->
							<!--			parts:[{path:'products>Price'},{path:'products>CurrencyCode'}],-->
							<!--			type: 'sap.ui.model.type.Currency',-->
							<!--			formatOptions: {showMeasure: false}-->
							<!--		}"-->
							<!--		unit="{products>CurrencyCode}" />-->
							<!--<ObjectIdentifier title="" text="{plants>active}" />-->
							<ObjectIdentifier title="" 
											  text="Status {
												path: 'plants>active',
												formatter: '.formatter.activeInactive'
												}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>

		<!-- DynamicPage Footer -->
		<!--<f:footer>-->
		<!--	<OverflowToolbar-->
		<!--		visible="{ path: 'messages>/',-->
		<!--				   formatter: '.formatter.isFooterVisible' }">-->
		<!--		<Button-->
		<!--			icon="sap-icon://alert"-->
		<!--            text="{= ${messages>/}.length }"-->
		<!--            type="Emphasized"-->
		<!--            press="onShowMessages" />-->
		<!--        <ToolbarSpacer/>-->
		<!--        <OverflowToolbarButton-->
		<!--        	icon="sap-icon://sys-cancel"-->
		<!--            text="Clear"-->
		<!--            type="Transparent"-->
		<!--            press="onClearMessages"/>-->
		<!--	</OverflowToolbar>-->
		<!--</f:footer>-->
	</f:DynamicPage>
</core:View>