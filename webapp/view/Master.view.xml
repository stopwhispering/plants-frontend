<core:View displayBlock="true" controllerName="plants.tagger.ui.controller.Master" height="100%"
	  xmlns="sap.m"
	  xmlns:f="sap.f"
	  xmlns:core="sap.ui.core"
	  class="sapUiSizeCompact">
	
	<f:DynamicPage id="dynamicPageId"
		toggleHeaderOnTitleClick="false">
		
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title id="pageHeadingTitle"
						   text="Plants ({
								path: 'plants>/PlantsCollection',
								formatter: '.formatter.countPlants'
										 })"/>
											<!--not used; set in onAfterRendering-->
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<Table id="productsTable"
				   inset="false"
				   items="{
						path: 'plants>/PlantsCollection',
						sorter: {
							path: 'plant_name'
						},
						filters: [{path: 'active', operator: 'EQ', value1: true}]
					}"
				   class="sapFDynamicPageAlignContent"
				   width="auto">
				<headerToolbar>
					<OverflowToolbar>
						<SearchField search="onSearch" width="17.5rem"/>
						<ToolbarSpacer/>
						<OverflowToolbarButton icon="sap-icon://add" type="Transparent" press="onAdd"/>
						<OverflowToolbarButton icon="sap-icon://add-photo" type="Transparent" press="onOpenFragmentUploadPhotos"/>
						<!--<OverflowToolbarButton icon="sap-icon://sort" type="Transparent" press="onSort"/>-->
						<OverflowToolbarButton icon="sap-icon://bed" type="Transparent" press="onFilterActive"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="12em">
						<Text text="Product" />
					</Column>
					<Column	hAlign="End">
						<Text text="Status" />
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onListItemPress">
						<cells>
							<ObjectIdentifier title="{plants>plant_name}" text="{plants>species}" />
							<!--<ObjectNumber-->
							<!--		number="{-->
							<!--			parts:[{path:'products>Price'},{path:'products>CurrencyCode'}],-->
							<!--			type: 'sap.ui.model.type.Currency',-->
							<!--			formatOptions: {showMeasure: false}-->
							<!--		}"-->
							<!--		unit="{products>CurrencyCode}" />-->
							<!--<ObjectIdentifier title="" text="{plants>active}" />-->
							<ObjectIdentifier title="" 
											  text="Status {
												path: 'plants>active',
												formatter: '.formatter.activeInactive'
												}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>

		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</core:View>