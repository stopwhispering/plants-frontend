<mvc:View 
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" 
	controllerName="plants.tagger.ui.controller.Master" 
	height="100%"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	class="sapUiSizeCompact">
	
	<f:DynamicPage id="dynamicPageId"
		toggleHeaderOnTitleClick="false"
		showFooter="true">

		<f:content>
			<Table id="productsTable"
				   inset="false"
				   items="{
						path: 'plants>/PlantsCollection',
						sorter: {
							path: 'plant_name'
						},
						filters: [{path: 'active', operator: 'EQ', value1: true}]
					}"
				   class="sapFDynamicPageAlignContent"
				   width="auto"
				   sticky="HeaderToolbar">
				<headerToolbar>
					<OverflowToolbar asyncMode="true">
						<SearchField search="onSearch" width="13rem"/>
						<Label 
							id="pageHeadingTitle"
						    class="sapUiVisibleOnlyOnDesktop"
						    text="Plants ({
						 		path: 'plants>/PlantsCollection',
						 		formatter: '.formatter.countPlants' })"/>
						<ToolbarSpacer/>
						<OverflowToolbarButton 
							icon="sap-icon://e-care"
							text="New Plant"
							tooltip="{i18n>new_plant}"
							type="Transparent"
							press="onAdd"/>
						<OverflowToolbarButton
							icon="sap-icon://sort"
							tooltip="{i18n>sort}"
							type="Transparent" 
							press="onShowSortDialog"/>
						<OverflowToolbarButton
							id="btnToggleHideInactive"
							icon="sap-icon://filter"
							tooltip="{i18n>toggle_hide}"
							type="Transparent" 
							press="onFilterActive"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="13em">
						<Text text="{i18n>plants_table_header_name}"/>
					</Column>
					<Column 
						width="9em"
						minScreenWidth="Tablet">
						<Text text="{i18n>plants_table_header_image_date}" />
					</Column>
					<Column width="9em"
						minScreenWidth="Tablet"
						demandPopin="true"
						popinDisplay="WithoutHeader">
						<Text text="Tags" />
					</Column>
					<Column hAlign="End" >
						<Text text="" />
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onListItemPress">
						<cells>
							
							<ObjectIdentifier 
								title="{plants>plant_name}" 
								text="{plants>botanical_name}"/>
							<HBox>
								<ObjectIdentifier 
									text="{
										path: 'plants>latest_image_record_date',
										formatter: '.formatter.timestampToDate'
										}" 
									title="{
										path: 'plants>active',
										formatter: '.formatter.activeInactive'
										}" 
										/>
								<core:Icon
									visible="{
											path: 'plants>latest_image_record_date',
											formatter: '.formatter.last_image_warning'
											}"
									src="sap-icon://away"
									class="sapUiTinyMarginBegin"
									color="#FF6600"/>
							</HBox>
							
							<HBox
								items="{
									path: 'plants>tags',
									templateShareable: false
									}"
								wrap="Wrap">
								<items>
									<ObjectStatus
										text="{plants>text}"
										icon="{plants>icon}"
										state="{plants>state}"
										inverted="true"
										active="false"
										/>										
								</items>
							</HBox>
							<f:Avatar 
								src="{plants>url_preview}"
								displaySize="S"
								displayShape="Square">
							</f:Avatar>	
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>

	</f:DynamicPage>
</mvc:View>