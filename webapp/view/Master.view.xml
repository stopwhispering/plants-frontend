<mvc:View 
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" 
	controllerName="plants.tagger.ui.controller.Master" 
	height="100%"
	xmlns="sap.m"
	xmlns:f="sap.f"
	class="sapUiSizeCompact">
	
	<f:DynamicPage id="dynamicPageId"
		toggleHeaderOnTitleClick="false"
		showFooter="true">

		<!-- DynamicPage Content -->
		<f:content>
			<Table id="productsTable"
				   inset="false"
				   items="{
						path: 'plants>/PlantsCollection',
						sorter: {
							path: 'plant_name'
						},
						filters: [{path: 'active', operator: 'EQ', value1: true}]
					}"
				   class="sapFDynamicPageAlignContent"
				   width="auto"
				   sticky="HeaderToolbar">
				<headerToolbar>
					<OverflowToolbar asyncMode="true">
						<SearchField search="onSearch" width="13rem"/>
						<Label 
							id="pageHeadingTitle"
						    text="Plants ({
						 		path: 'plants>/PlantsCollection',
						 		formatter: '.formatter.countPlants'
						 				 })"/>
						<ToolbarSpacer/>
						<OverflowToolbarButton 
							icon="sap-icon://e-care"
							text="New Plant"
							tooltip="{i18n>new_plant}"
							type="Transparent"
							press="onAdd"/>
						<!--<OverflowToolbarButton icon="sap-icon://sort" type="Transparent" press="onSort"/>-->
						<OverflowToolbarButton
							id="btnToggleHideInactive"
							icon="sap-icon://filter"
							tooltip="{i18n>toggle_hide}"
							type="Transparent" 
							press="onFilterActive"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="12em">
						<Text text="Product" />
					</Column>
					<Column	hAlign="End">
						<Text text="" />
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onListItemPress">
						<cells>
							<ObjectIdentifier title="{plants>plant_name}" text="{plants>species}" />
							<ObjectIdentifier title="" 
											  text="{
												path: 'plants>active',
												formatter: '.formatter.activeInactive'
												}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>

	</f:DynamicPage>
</mvc:View>